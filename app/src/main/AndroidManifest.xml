<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ContFinancia">
        <activity
            android:name=".AcessoAoChatbot"
            android:exported="false" />
        <!-- Outras Activities com android:exported="false" -->
        <activity
            android:name=".BoasVindas"
            android:exported="true"
            android:theme="@style/Theme.ContFinancia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Remover o intent-filter da MainActivity -->

        <!-- Outras Activities que não são a tela inicial -->
        <activity
            android:name=".RelatorioSimples"
            android:exported="false" />
        <activity
            android:name=".PlanejamentoMensal"
            android:exported="false" />
        <activity
            android:name=".RegistroGastos"
            android:exported="false" />
        <activity
            android:name=".RegistroRecebido"
            android:exported="false" />
        <activity
            android:name=".VisaoGeral"
            android:exported="false" />
        <activity
            android:name=".Cadastro"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>