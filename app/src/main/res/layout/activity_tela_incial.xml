<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/boxUser1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/boxUser"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <!-- COLUNA DE TEXTOS -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OlÃ¡,"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seja Bem-vindo!"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/perfil"
                android:scaleType="centerCrop"
                />
        </LinearLayout>



        <!-- SeleÃ§Ã£o do mÃªs -->
        <TextView
            android:id="@+id/txtMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… SeleÃ§Ã£o do mÃªs"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/boxUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Barra de Pesquisa -->
        <LinearLayout
            android:id="@+id/barraPesquisa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/txtMes">

            <EditText
                android:id="@+id/edtPesquisa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Pesquisar"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_search_24" />
        </LinearLayout>


        <!-- Cards Totais -->
        <LinearLayout
            android:id="@+id/boxCards"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/barraPesquisa">

            <!-- Card 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#3B5BA8"
                android:padding="10dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total recebido"
                    android:textColor="#FFF"/>
            </LinearLayout>


            <!-- EspaÃ§o -->
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Card 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total gasto"
                    android:textColor="#FFF"/>
            </LinearLayout>


            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Card 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#C19A2E"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo atual"
                    android:textColor="#FFF"/>
            </LinearLayout>

        </LinearLayout>


        <!-- GrÃ¡fico circular estÃ¡tico -->
        <ImageView
            android:id="@+id/graficoPizza"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/pizza"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/boxCards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Mensagem -->
        <TextView
            android:id="@+id/txtMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VocÃª jÃ¡ gastou 80% do que ganhou este mÃªs"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/graficoPizza"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- BotÃµes Recebi / Gasto -->
        <LinearLayout
            android:id="@+id/boxButtons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/txtMensagem">

            <!-- BotÃ£o Recebi -->
            <Button
                android:id="@+id/buttonRecebi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Recebi   +"
                android:background="#4CAF50"
                android:textColor="#FFF"/>

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/buttonIA"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Chatbot"
                android:textAlignment="center"
                android:background="#63A840"
                android:textColor="#000"/>

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <!-- BotÃ£o Gasto -->

            <Button
                android:id="@+id/buttonGastei"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Gasto   +"
                android:background="#8BC34A"
                android:textColor="#000"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
